<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorAccent"
        android:layout_margin="@dimen/ui_hint_margin"
        android:text="@string/ui_hint"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager"/>

    <com.radusalagean.quickdotsview.QuickDotsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quick_dots_view"
        android:layout_marginStart="@dimen/quick_dots_view_margin"
        android:layout_marginLeft="@dimen/quick_dots_view_margin"
        android:layout_marginTop="@dimen/quick_dots_view_margin"
        android:layout_marginEnd="@dimen/quick_dots_view_margin"
        android:layout_marginRight="@dimen/quick_dots_view_margin"
        android:layout_marginBottom="@dimen/quick_dots_view_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>